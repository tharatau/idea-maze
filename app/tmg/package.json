{
  "name": "tmg",
  "version": "0.5.4",
  "private": true,
  "scripts": {
    "fmt": "prettier ./**/*.tsx",
    "lnt": "next lint",
    "e2e": "jest",
    "dev": "next dev",
    "bld": "next build"
  },
  "jest": {
    "preset": "ts-jest",
    "transform": {
      ".+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "jsdom"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "trailingComma": "all",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "proseWrap": "preserve",
    "htmlWhitespaceSensitivity": "strict",
    "endOfLine": "lf",
    "singleAttributePerLine": true
  },
  "eslintConfig": {
    "extends": "next/core-web-vitals",
    "globals": {
      "jest": true
    }
  }
}
